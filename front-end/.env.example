# =============================================================================
# FRONT-END (NEXT.JS) ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# All variables prefixed with NEXT_PUBLIC_ are exposed to the browser

# -----------------------------------------------------------------------------
# STACKS NETWORK CONFIGURATION
# -----------------------------------------------------------------------------
# Network for Stacks blockchain: mocknet (local), devnet, testnet, mainnet
NEXT_PUBLIC_STACKS_NETWORK=mocknet

# Stacks API URL for blockchain interactions
NEXT_PUBLIC_STACKS_API_URL=http://localhost:3999

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Base URL for authentication and app metadata
NEXT_PUBLIC_AUTH_ORIGIN=http://localhost:3000

# Application name shown in wallet connect
NEXT_PUBLIC_APP_NAME=Stacks dApp Template (Next.js)

# Application description
NEXT_PUBLIC_APP_DESCRIPTION=A modern template for building dApps on Stacks

# -----------------------------------------------------------------------------
# API KEYS (PUBLIC)
# -----------------------------------------------------------------------------
# Hiro API key for enhanced API access (optional for development)
NEXT_PUBLIC_HIRO_API_KEY=your_hiro_api_key_here

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Enable debug mode for additional logging
NEXT_PUBLIC_DEBUG=false

# Show debug info in UI (development only)
NEXT_PUBLIC_SHOW_DEBUG_INFO=true